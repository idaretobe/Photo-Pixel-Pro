<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".photoeditor.MediaActivity"
    android:background="@drawable/edit_photo_background">


    <LinearLayout
        android:id="@+id/linearLayoutPhotoEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.rohitneel.photopixelpro.photocollage.widget.SquareLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp">


                <LinearLayout
                    android:id="@+id/cameraEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgViewCamera"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_baseline_camera"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Camera"
                        android:fontFamily="@font/font"
                        android:textColor="@color/white"/>

                </LinearLayout>

        </com.rohitneel.photopixelpro.photocollage.widget.SquareLayout>

        <com.rohitneel.photopixelpro.photocollage.widget.SquareLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp">


                <LinearLayout
                    android:id="@+id/photoEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/imgViewPhoto"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_photo_gallery"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Photo"
                        android:fontFamily="@font/font"
                        android:textColor="@color/white"/>

                </LinearLayout>

        </com.rohitneel.photopixelpro.photocollage.widget.SquareLayout>

    </LinearLayout>



